{
  "name": "api-gateway",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "proto:install": "npm i git+https://github.com/requiemDevelop/syntx-protos.git",
    "proto:users": "protoc --plugin=.\\node_modules\\ts-proto\\protoc-gen-ts.cmd --ts_proto_opt=nestJs=true --ts_proto_opt=esModuleInterop=true --ts_proto_opt=fileSuffix=.pb -I=.\\node_modules\\syntx-protos\\users --ts_proto_out=.\\src\\users\\ .\\node_modules\\syntx-protos\\users\\users.proto",
    "proto:auth": "protoc --plugin=.\\node_modules\\ts-proto\\protoc-gen-ts.cmd --ts_proto_opt=nestJs=true --ts_proto_opt=esModuleInterop=true --ts_proto_opt=useDate=true --ts_proto_opt=emitImportedFiles=false --ts_proto_opt=fileSuffix=.pb -I=.\\node_modules\\syntx-protos\\auth --ts_proto_out=.\\src\\auth\\ .\\node_modules\\syntx-protos\\auth\\auth.proto",
    "proto:projects": "protoc --plugin=.\\node_modules\\ts-proto\\protoc-gen-ts.cmd --ts_proto_opt=nestJs=true --ts_proto_opt=esModuleInterop=true --ts_proto_opt=useDate=true --ts_proto_opt=emitImportedFiles=false --ts_proto_opt=fileSuffix=.pb -I=.\\node_modules\\syntx-protos\\projects --ts_proto_out=.\\src\\projects\\ .\\node_modules\\syntx-protos\\projects\\projects.proto",
    "proto:roles": "protoc --plugin=.\\node_modules\\ts-proto\\protoc-gen-ts.cmd --ts_proto_opt=nestJs=true --ts_proto_opt=esModuleInterop=true --ts_proto_opt=useDate=true --ts_proto_opt=emitImportedFiles=false --ts_proto_opt=fileSuffix=.pb -I=.\\node_modules\\syntx-protos\\roles --ts_proto_out=.\\src\\roles\\ .\\node_modules\\syntx-protos\\roles\\roles.proto",
    "proto:all": "npm run proto:users && npm run proto:auth && npm run proto:projects && npm run proto:roles",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.6.7",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/microservices": "^8.4.6",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/platform-express": "^8.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "syntx-protos": "git+https://github.com/requiemDevelop/syntx-protos.git"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "protoc-gen-ts": "^0.8.3",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "ts-proto": "^1.115.4",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5",
    "webpack": "^5.73.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
